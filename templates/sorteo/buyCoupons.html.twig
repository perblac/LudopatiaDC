{% extends 'base.html.twig' %}

{% block title %}Sorteo
{% endblock %}

{% block body %}
	<h1>Sorteo:
		{{sorteo.name}}</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>SorteoDate</th>
				<td>{{ sorteo.sorteoDate ? sorteo.sorteoDate|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>CouponPrice</th>
				<td>{{ sorteo.couponPrice }}</td>
			</tr>
			<tr>
				<th>TotalCoupons</th>
				<td>{{ sorteo.totalCoupons }}</td>
			</tr>
			<tr>
				<th>Prize</th>
				<td>{{ sorteo.prize }}</td>
			</tr>
		</tbody>
	</table>
	{% for coupon in coupons %}
		{% if coupon.state == 0 %}
			<a href="/coupon/buy/{{coupon.id}}">{{coupon.number}}</a>
		{% endif %}
	{% endfor %}
	<br>
	<a href="{{ path('app_main_view_sorteos') }}">back</a>


{% endblock %}
